{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./electron/repositories-compiled",
    "rootDir": "./electron/repositories",
    "noEmit": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": false,
    "lib": ["ES2020"],
    "types": ["node"]
  },
  "include": [
    "electron/repositories/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out"
  ]
}

