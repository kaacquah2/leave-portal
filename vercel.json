{
  "buildCommand": "prisma generate && npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-reminders",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/year-end",
      "schedule": "0 0 31 12 *"
    }
  ],
  "env": {
    "PRISMA_GENERATE_DATAPROXY": "true",
    "NODE_ENV": "production"
  }
}

