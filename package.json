{
  "name": "my-v0-project",
  "version": "0.1.0",
  "description": "HR Leave Portal Desktop Application",
  "author": "MOFA",
  "private": true,
  "main": "electron/main.js",
  "scripts": {
    "build": "prisma generate && next build --webpack",
    "dev": "prisma generate && next dev --webpack",
    "lint": "eslint .",
    "start": "next start",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "cross-env ELECTRON=1 npm run build && cross-env ELECTRON_API_URL=${ELECTRON_API_URL:-} electron-builder",
    "electron:build:win": "node scripts/build-electron.js",
    "electron:build:mac": "cross-env ELECTRON=1 npm run build && cross-env ELECTRON_API_URL=${ELECTRON_API_URL:-} electron-builder --mac",
    "electron:build:linux": "cross-env ELECTRON=1 npm run build && cross-env ELECTRON_API_URL=${ELECTRON_API_URL:-} electron-builder --linux",
    "electron:build:vercel": "cross-env ELECTRON_API_URL=${ELECTRON_API_URL} npm_config_build_from_source=false electron-builder",
    "electron:build:vercel:win": "cross-env ELECTRON_API_URL=${ELECTRON_API_URL} npm_config_build_from_source=false electron-builder --win",
    "electron:build:vercel:mac": "cross-env ELECTRON_API_URL=${ELECTRON_API_URL} npm_config_build_from_source=false electron-builder --mac",
    "electron:build:vercel:linux": "cross-env ELECTRON_API_URL=${ELECTRON_API_URL} npm_config_build_from_source=false electron-builder --linux",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:fix": "tsx scripts/fix-migration-lock.ts",
    "db:mark-applied": "tsx scripts/mark-migration-applied.ts",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:test": "tsx scripts/test-db-connection.ts",
    "create-users": "tsx scripts/create-test-users.ts",
    "verify-users": "tsx scripts/verify-users.ts",
    "setup:initial": "tsx scripts/setup-initial-data.ts",
    "accrual:monthly": "tsx scripts/scheduled-accrual.ts",
    "accrual:year-end": "tsx scripts/year-end-processing.ts",
    "reminders:send": "tsx scripts/scheduled-reminders.ts",
    "backup:database": "tsx scripts/backup-database.ts",
    "restore:database": "tsx scripts/restore-database.ts",
    "mobile:install": "cd mobile && npm install",
    "mobile:start": "cd mobile && npm start",
    "mobile:ios": "cd mobile && npm run ios",
    "mobile:android": "cd mobile && npm run android",
    "clean:cache": "tsx scripts/clear-cache.ts",
    "clean:all": "tsx scripts/clear-cache.ts --all"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@neondatabase/serverless": "^1.0.2",
    "@prisma/adapter-neon": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "@radix-ui/react-accordion": "1.2.2",
    "@radix-ui/react-alert-dialog": "1.1.4",
    "@radix-ui/react-aspect-ratio": "1.1.1",
    "@radix-ui/react-avatar": "1.1.2",
    "@radix-ui/react-checkbox": "1.1.3",
    "@radix-ui/react-collapsible": "1.1.2",
    "@radix-ui/react-context-menu": "2.2.4",
    "@radix-ui/react-dialog": "1.1.4",
    "@radix-ui/react-dropdown-menu": "2.1.4",
    "@radix-ui/react-hover-card": "1.1.4",
    "@radix-ui/react-label": "2.1.1",
    "@radix-ui/react-menubar": "1.1.4",
    "@radix-ui/react-navigation-menu": "1.2.3",
    "@radix-ui/react-popover": "1.1.4",
    "@radix-ui/react-progress": "1.1.1",
    "@radix-ui/react-radio-group": "1.2.2",
    "@radix-ui/react-scroll-area": "1.2.2",
    "@radix-ui/react-select": "2.1.4",
    "@radix-ui/react-separator": "1.1.1",
    "@radix-ui/react-slider": "1.2.2",
    "@radix-ui/react-slot": "1.1.1",
    "@radix-ui/react-switch": "1.1.2",
    "@radix-ui/react-tabs": "1.1.2",
    "@radix-ui/react-toast": "1.2.4",
    "@radix-ui/react-toggle": "1.1.1",
    "@radix-ui/react-toggle-group": "1.1.1",
    "@radix-ui/react-tooltip": "1.1.6",
    "@types/jspdf": "^1.3.3",
    "@types/nodemailer": "^7.0.4",
    "@types/qrcode": "^1.5.6",
    "@vercel/analytics": "^1.4.1",
    "autoprefixer": "^10.4.20",
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.7.0",
    "bufferutil": "^4.0.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "1.0.4",
    "date-fns": "4.1.0",
    "electron-is-dev": "^2.0.0",
    "embla-carousel-react": "8.5.1",
    "input-otp": "1.4.1",
    "jose": "^5.9.6",
    "jspdf": "^3.0.4",
    "lucide-react": "^0.454.0",
    "next": "16.1.0",
    "next-pwa": "^5.6.0",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.11",
    "otplib": "^12.0.1",
    "qrcode": "^1.5.4",
    "react": "19.2.0",
    "react-day-picker": "9.8.0",
    "react-dom": "19.2.0",
    "react-hook-form": "^7.60.0",
    "react-resizable-panels": "^2.1.7",
    "recharts": "2.15.4",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7",
    "utf-8-validate": "^6.0.5",
    "vaul": "^1.1.2",
    "web-push": "^3.6.7",
    "ws": "^8.18.3",
    "exceljs": "^4.4.0",
    "zod": "3.25.76"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.9",
    "@types/bcryptjs": "^2.4.6",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/ws": "^8.18.1",
    "dotenv": "^17.2.3",
    "electron": "^39.2.7",
    "postcss": "^8.5",
    "prisma": "^7.0.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.9",
    "tsx": "^4.19.2",
    "tw-animate-css": "1.3.3",
    "typescript": "^5"
  },
  "overrides": {
    "hono": ">=4.10.3",
    "valibot": ">=1.2.0"
  },
  "build": {
    "appId": "com.mofa.hr-leave-portal",
    "productName": "HR Leave Portal",
    "copyright": "Copyright Â© 2024 Ministry of Fisheries and Aquaculture",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "package.json",
      "node_modules/electron-is-dev/**/*",
      "!.next/**/*",
      "!.electron-builderignore"
    ],
    "fileAssociations": [],
    "asar": true,
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "forceCodeSigning": false,
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/mofa.ico",
      "artifactName": "${productName} Setup ${version}.${ext}",
      "requestedExecutionLevel": "asInvoker",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/icon.icns",
      "category": "public.app-category.business"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "public/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "HR Leave Portal",
      "installerIcon": "public/mofa.ico",
      "uninstallerIcon": "public/mofa.ico",
      "installerHeaderIcon": "public/mofa.ico",
      "deleteAppDataOnUninstall": false
    }
  }
}
