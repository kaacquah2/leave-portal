  "scripts": {
    "build": "node scripts/assert-static-safe.js && prisma generate && next build --webpack",
    "dev": "prisma generate && next dev --webpack",
    "lint": "eslint .",
    "start": "next start",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:fix": "tsx scripts/fix-migration-lock.ts",
    "db:mark-applied": "tsx scripts/mark-migration-applied.ts",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:seed": "tsx prisma/seed.ts",
    "db:test": "tsx scripts/test-db-connection.ts",
    "create-users": "tsx scripts/create-test-users.ts",
    "verify-users": "tsx scripts/verify-users.ts",
    "migrate:remove-deprecated-roles": "tsx scripts/migrate-remove-deprecated-roles.ts",
    "setup:initial": "tsx scripts/setup-initial-data.ts",
    "accrual:monthly": "tsx scripts/scheduled-accrual.ts",
    "accrual:year-end": "tsx scripts/year-end-processing.ts",
    "reminders:send": "tsx scripts/scheduled-reminders.ts",
    "backup:database": "tsx scripts/backup-database.ts",
    "restore:database": "tsx scripts/restore-database.ts",
    "mobile:install": "cd mobile && npm install",
    "mobile:start": "cd mobile && npm start",
    "mobile:ios": "cd mobile && npm run ios",
    "mobile:android": "cd mobile && npm run android",
    "clean:cache": "tsx scripts/clear-cache.ts",
    "clean:all": "tsx scripts/clear-cache.ts --all",
    "build:tauri": "node scripts/clean-next-cache.js && node scripts/disable-api-for-tauri.js && cross-env TAURI=1 next build --webpack && node scripts/verify-export.js",
    "tauri": "tauri",
    "tauri:dev": "cross-env TAURI=1 npm run dev & wait-on http://localhost:3000 && tauri dev",
    "tauri:build": "npm run build:tauri && tauri build"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
